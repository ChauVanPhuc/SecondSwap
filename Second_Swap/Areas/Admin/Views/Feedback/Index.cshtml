@model IEnumerable<Second_Swap.Models.Feedback>

@{

    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- page css -->
<link href="~/admin/assets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">

<div class="header-sub-title">
    <nav class="breadcrumb breadcrumb-dash">
        <a class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <span class="breadcrumb-item active">Feedback</span>
    </nav>
</div>

@* <a class="btn btn-outline-info btn-sm add" asp-area="Admin" asp-controller="feedback" asp-action="Create" title="Create" style="margin-bottom: 20px">
    New Role <i class="bx bx-list-plus"></i>
</a> *@
<div class="card">
    <div class="card-body">
        <table id="data-table" class="table">
            <thead>
                <tr>
                    <th>Order Id</th>
                    <th>Seller</th>
                    <th>Quality</th>
                    <th>Comment</th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var feedback in Model)
                {
                    <tr>
                        <td>@feedback.OrderId</td>
                        
                        <td>
                            @feedback.Seller
                        </td>
                        <td>
                            @feedback.Quality
                        </td>
                        <td style="width:300px">@feedback.Comment</td>
                        <td>

                            <a class="btn btn-outline-danger btn-sm edit" asp-area="Admin" asp-action="Detail" asp-route-id="@feedback.Id" title="Edit">
                                Detail <i class="fas fa-bars"></i>
                            </a>
                        </td>

                    </tr>

                }

            </tbody>
            <tfoot>

                <tr>
                    <th>Order Id</th>
                    <th>Seller</th>
                    <th>Quality</th>
                    <th>Comment</th>

                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section Scripts {

    <!-- page js -->
    <script src="~/admin/assets/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/assets/vendors/datatables/dataTables.bootstrap.min.js"></script>
}